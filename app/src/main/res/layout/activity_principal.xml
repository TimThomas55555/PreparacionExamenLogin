<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">
    <!-- Le introducimos el SWIPEREFRESH para meterle la accion de refrecar la pantalla
en este caso le introducimos una imagen, pero no tiene porque estar dentro,
todo lo que este dentro se refrescara-->

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/myswipe"
        android:layout_width="match_parent"
        android:layout_height="664dp">


        <TextView
            android:id="@+id/textViewMenuPulsado"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="long tap for Context Menu"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="312dp"
        android:layout_marginTop="668dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="15dp"
        android:text="Button" />

</RelativeLayout>